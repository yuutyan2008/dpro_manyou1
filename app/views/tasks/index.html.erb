<h1><%= t('tasks.index.title') %></h1>

<%# タスクが存在する場合のみタスク一覧を表示 %>
<% if @tasks.any? %>
<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:content) %></th>
      <th><%= Task.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td class="task-title"><%= task.title %></td>
      <td class="task-content"><%= task.content %></td>
      <td class="task-created_at"><%= task.created_at.strftime("%Y-%m-%d %H:%M:%S %z") %></td> <!-- 日本のフォーマットに整える -->
      <td><%= link_to t('tasks.index.links.show'), task, class: 'show-task' %></td>
      <td><%= link_to t('tasks.index.links.edit'), edit_task_path(task), class: 'edit-task' %></td>
      <td>
        <%= link_to t('tasks.index.links.destroy'), task,  method: :delete, data: { confirm: t('tasks.index.links.confirm_destroy') }, class: 'destroy-task' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>
<!-- ページネーションリンクを表示 -->

<%# 存在しない場合にはメッセージを表示 %>
<% else %>
<p>まだタスクがありません。</p>
<% end %>
<br>
