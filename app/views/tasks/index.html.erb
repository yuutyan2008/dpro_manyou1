<h1>Tasks Index Page</h1>

<%# タスクが存在する場合のみタスク一覧を表示 %>
<% if @tasks.any? %>
<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:content) %></th>
      <th><%= Task.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.created_at %></td>
      <td><%= link_to 'Show', task, class: 'show-task' %></td>
      <td><%= link_to 'Edit', edit_task_path(task), class: 'edit-task' %></td>
      <td><%= link_to 'Destroy', task,  method: :delete, data: { confirm: 'Are you sure?' }, class: 'destroy-task' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%# 存在しない場合にはメッセージを表示 %>
<% else %>
<p>まだタスクがありません。</p>
<% end %>
<br>